.card
  .card-header.d-flex.align-items-center
    %span Listing User Data

    = link_to 'New User Data', new_user_datum_path, class: 'btn btn-outline-secondary ms-auto' if current_user.user?

  %table.table
    %thead
      %tr
        %th Hole Number
        %th Score
        %th
    %tbody
      - @user_data.each do |data|
        %tr
          %td= data.user_hole_id
          %td= data.score
          %td
            .btn-toolbar.float-end
              = link_to 'Edit', edit_user_datum_path(data), class: 'btn btn-outline-secondary ms-1 btn-sm' if current_user.user?
              = link_to 'Destroy', user_datum_path(data), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm' if current_user.user?



