.row.justify-content-center
  .col-lg-8
    .card
      .card-header.d-flex.align-items-center 
        %span Handicaps
        = link_to 'Add New Handicap', new_handicap_path, class: 'btn btn-outline-secondary ms-auto'
      
      %table.table
        %thead
          %tr
            %th Handicap value
            %th Hole Number
            %th
        %tbody
        - @handicaps.each do |handicap|
          %tr
            %td= handicap.value
            %td= handicap.user_hole_id
            %td
              .btn-toolbar.float-end
                = link_to 'Show', handicap_path(handicap), class: 'btn btn-outline-secondary btn-sm'
                = link_to 'Edit', edit_handicap_path(handicap), class: 'btn btn-outline-secondary ms-1 btn-sm'
                = link_to 'Delete', handicap_path(handicap), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'
