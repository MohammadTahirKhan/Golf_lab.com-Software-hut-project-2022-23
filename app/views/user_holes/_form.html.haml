-# frozen_string_literal: true
= simple_form_for(@user_hole) do |f|
  .card-body
    = f.input :hole_number, wrapper_html: { class: 'mb-3' }
    = f.input :user_id, wrapper_html: { class: 'mb-3' }
    = f.input :course_id, wrapper_html: { class: 'mb-3' }

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', user_holes_path, class: 'btn btn-link ms-auto'
