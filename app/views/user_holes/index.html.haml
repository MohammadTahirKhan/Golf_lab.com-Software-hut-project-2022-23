.card
  .card-header.d-flex.align-items-center
    %span Listing User Holes

    = link_to 'New User Hole', new_user_hole_path, class: 'btn btn-outline-secondary ms-auto' if current_user.user?

  %table.table
    %thead
      %tr
        %th Hole number
        %th User
        %th Course
        %th
    %tbody
      - @user_holes.each do |user_hole|
        %tr
          %td= user_hole.hole_number
          %td= user_hole.user_id
          %td= user_hole.hole.course_name
          %td
            .btn-toolbar.float-end
              = link_to 'Show', user_hole, class: 'btn btn-outline-secondary btn-sm' if current_user.user?
              = link_to 'Edit', edit_user_hole_path(user_hole), class: 'btn btn-outline-secondary ms-1 btn-sm' if current_user.user?
              = link_to 'Destroy', user_hole, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm' if current_user.user?