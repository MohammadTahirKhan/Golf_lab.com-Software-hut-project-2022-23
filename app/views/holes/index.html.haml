.card
  .card-header.d-flex.align-items-center
    %span Listing Holes

    = link_to 'New Hole', new_hole_path, class: 'btn btn-outline-secondary ms-auto'

  %table.table
    %thead
      %tr
        %th Hole Number
        %th Being Edited?
        %th Creator
        %th Course Name
        %th
    %tbody
      - @holes.each do |hole|
        %tr
          %td= hole.hole_number
          %td= hole.is_beingEdited
          %td= hole.user.email
          %td= hole.course_name
          %td
            .btn-toolbar.float-end
              = link_to 'Show', hole, class: 'btn btn-outline-secondary btn-sm'
              = link_to 'Edit', edit_hole_path(hole), class: 'btn btn-outline-secondary ms-1 btn-sm'
              = link_to 'Destroy', hole, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'