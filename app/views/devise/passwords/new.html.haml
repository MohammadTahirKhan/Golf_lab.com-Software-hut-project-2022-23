-# forgot password page
%div#whole
  %h1#title Group 31
  %div#user-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      %h2#frgtheader Forgot your password?
      = f.input :email, autofocus: true, required: true, input_html: { autocomplete: "email" }

      %button.btn.btn-primary.form-btn{type: "submit" , id: "submit"} Send me reset password instructions
      = link_to 'Login', new_session_path(resource_name), id: 'log'
      = link_to 'Register', new_registration_path(resource_name), id:'log'