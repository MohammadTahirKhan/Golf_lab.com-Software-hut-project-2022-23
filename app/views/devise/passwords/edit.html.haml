-# change password form
%div#whole
  %h1#title Group 31
  %div#user-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      %h2#frgtheader Change your password
      = f.input :password, required: true, autofocus: true, input_html: { autocomplete: "new-password" }
      = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }
      %button.btn.btn-primary.form-btn{type: "submit" , id: "submit"} Change my password
      = link_to 'Login', new_session_path(resource_name), id: 'log'
      = link_to 'Register', new_registration_path(resource_name), id:'log'