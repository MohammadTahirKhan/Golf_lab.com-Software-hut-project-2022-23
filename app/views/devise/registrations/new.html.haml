-# Register an account
%div#whole
  %h1#title Group 31
  %div#user-form
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %h2#header Registration
      = f.input :email, autofocus: true, required: true
      = f.input :password, required: true
      = f.input :password_confirmation, required: true
      
      %button.btn.btn-primary.form-btn{type: "submit" , id: "submit"} Register

      = link_to 'Already have an account?', new_session_path(resource_name), id: "acc"