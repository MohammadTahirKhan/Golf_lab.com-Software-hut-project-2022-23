%div
  %h1 Update Profile
  %div
    = simple_form_for(resource, as: resource_name, url: edit_user_registration_path(resource_name)) do |f|
      = f.input :email

      = f.input :password
      = f.input :password_confirmation
      
      %button.btn.btn-primary.form-btn{type: "submit" , id: "submit"} Save changes