%div#whole
  %h1#title Group 31
  %div#user-form
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h2#header Login
      = f.input :email, autofocus: true, required: true
      = f.input :password, required: true
      = link_to 'Forgot your password?', new_password_path(resource_name), id: 'forgot_pass'
      
      %button.btn.btn-primary.form-btn{type: "submit"} Login

      = link_to 'Register', new_registration_path(resource_name), class: 'btn btn-primary form-btn'
       